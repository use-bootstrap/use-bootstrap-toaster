---
import Layout from '../components/Layout.astro'
import Code from '../components/Code.astro'
import pkg from '../../package.json'

const exampleHide = `import ${pkg.libName} from '${pkg.name}'

const example = ${pkg.libName}({
  body: 'Event has been created',
  autohide: false,
})

setTimeout(() => {
  example.hide()
}, 1000)`

const exampleHideAll = `import ${pkg.libName} from '${pkg.name}'

${pkg.libName}.hide() // hide all toasts`
---

<style lang="scss" is:global>
  .shiki:last-child {
    margin-bottom: 0;
  }
</style>

<Layout title="Methods">
  <h1 class="mb-4">Methods</h1>
  <div class="table-responsive">
    <table class="table table-bordered" style="max-width: 60rem">
      <thead>
        <tr>
          <th>Name</th>
          <th>Params</th>
          <th>Returns</th>
          <th>Example</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>hide</code></td>
          <td><code>null</code></td>
          <td><code>void</code></td>
          <td>
            <Code lang="javascript" code={exampleHide} />
          </td>
        </tr>
        <tr>
          <td><code>hide</code></td>
          <td><code>null</code></td>
          <td><code>void</code></td>
          <td>
            <Code lang="javascript" code={exampleHideAll} />
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</Layout>
