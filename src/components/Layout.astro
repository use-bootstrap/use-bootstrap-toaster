---
import '@fontsource/hind-siliguri/latin.css'
import '@fontsource/inter-tight/latin.css'
import 'bootstrap/dist/css/bootstrap.min.css'
import '../style.scss'
import pkg from '../../package.json'
import Pagination from './Pagination.astro'
interface Props {
  title?: string
}
const props = Astro.props
const pathname = Astro.url.pathname

const links = [
  {
    href: '/',
    text: 'Home',
  },
  {
    href: '/install.html',
    text: 'Install',
  },
  {
    href: '/demo.html',
    text: 'Demo',
  },
  {
    href: '/options.html',
    text: 'Options',
  },
  {
    href: '/methods.html',
    text: 'Methods',
  },
]
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pkg.description} />
    <meta name="keywords" content={pkg.keywords.join(', ')} />
    <meta name="theme-color" content="#2b3035" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{props.title ?? pkg.name} | {props.title ? pkg.name : pkg.description}</title>
    <script is:inline>
      const storedTheme = localStorage.getItem('theme') || 'light'
      function setTheme(theme) {
        document.documentElement.setAttribute('data-bs-theme', theme)
        localStorage.setItem('theme', theme)
      }
      setTheme(storedTheme)
    </script>
  </head>

  <body>
    <!-- Header -->
    <div class="sticky-top">
      <nav class="navbar navbar-expand bg-body-tertiary py-1" data-bs-theme="dark">
        <div class="container">
          <a href="/" class="navbar-brand d-flex align-items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 11 18-5v12L3 14v-3z"/><path d="M11.6 16.8a3 3 0 1 1-5.8-1.6"/></svg>
            <span>{pkg.name}</span>
            <span class="badge text-bg-light">
              v{pkg.version}
            </span>
          </a>
          <div class="ms-auto navbar-nav align-items-center gap-3">
            <div class="form-check form-switch navbar-text m-0">
              <input class="form-check-input" type="checkbox" role="switch" id="switchTheme" />
              <label class="form-check-label small" for="switchTheme">Dark Mode</label>
              <script is:inline>
                const switchTheme = document.getElementById('switchTheme')
                switchTheme.checked = storedTheme === 'dark'
                switchTheme.addEventListener('change', function () {
                  setTheme(this.checked ? 'dark' : 'light')
                })
              </script>
            </div>
          </div>
        </div>
      </nav>
      <div class="bg-body-tertiary" style="border-bottom:var(--bs-border-width) solid var(--bs-border-color)">
        <div class="container pt-2">
          <nav class="overflow-x-auto" id="main-nav" style="margin-bottom:-1px">
            <ul class="nav nav-underline flex-nowrap">
              {
                links.map((link) => (
                  <li class="nav-item">
                    <a class="nav-link link-body-emphasis" class:list={[{ active: pathname === link.href }]} href={link.href}>
                      {link.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- Main -->
    <div class="container mt-4 mb-5">
      <slot />
    </div>

    <!-- Footer -->
    <div class="container">
      <Pagination links={links} />
    </div>
  </body>
</html>
